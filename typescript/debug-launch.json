{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TS-Node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/typescript/node_modules/.bin/ts-node",
            "runtimeArgs": [
                "--transpile-only",
                "--compiler-options",
                "{ \"module\": \"NodeNext\", \"moduleResolution\": \"NodeNext\" }"
            ],
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}
